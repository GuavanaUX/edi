        <field name="inherit_id" ref="base.view_partner_form" />
        <field name="arch" type="xml">
            <group name="sale" position="inside">
                <field
                    name="voxel_enabled"
                    attrs="{'invisible': [('parent_id', '!=', False), ('is_company', '=', False)]}"
